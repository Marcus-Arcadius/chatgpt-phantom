{
  "manifest_version": 2,
  "name": "ChatGPT Phantom (Copywriter)",
  "version": "1.1.3",
  "description": "This extension lets you write trend NEWS articles and Youtube scripts.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "https://phantom-ghost-writer.vercel.app/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {},
  "browser_specific_settings": {
    "gecko": {
      "id": "{b13d04e3-41db-48b3-842c-8079df93c7ad}"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["script.js", "api.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    "regions.json",
    "instructions.json",
    "periods.json",
    "languages.json"
  ]
}
